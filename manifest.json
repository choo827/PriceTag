{
  "name": "PriceTag",
  "description": "You can easily exchange money while browsing the web.",
  "version": "0.3.1",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [ {
    "all_frames": true,
    "css": [ "content_script.css" ],
    "js": [ "content_script.js" ],
    "matches": [ "http://*/*", "https://*/*" ],
    "run_at": "document_end"
  } ],
  "options_page": "./options/options.html",
  "icons": {
    "16": "icon16.ico",
    "48": "icon128.png",
    "128": "icon128.png"
  }
}